<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMICalculatorActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/user_height_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Height (in Inches)"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/user_weight_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Weight (in lbs)"
        android:textAlignment="center"
        android:layout_below="@id/user_height_field"/>

    <Button
        android:id="@+id/btn_calculate_bmi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:text="Calculate"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/user_weight_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/bmi_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BMI is: "
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/btn_calculate_bmi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/health_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are Healthy!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/bmi_value_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

</RelativeLayout>
